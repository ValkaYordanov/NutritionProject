@using NutritionApp.Models.ViewModels
@model BasketIndexViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Meal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToBasket" asp-controller="Basket" method="post">
            <div class="form-group">
                <label class="control-label">Choose a product:</label>
                <select name="productId" id="productId" class="form-control" asp-items="ViewBag.AllProd as SelectList"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Qunatity</label>
                <input name="qunatity" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>

        @await Component.InvokeAsync("BasketSummary", Model.Basket)

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Meal.UserId" class="control-label"></label>
                <select asp-for="Meal.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>

            <div class="form-group">
                <label asp-for="Meal.MealName" class="control-label"></label>
                <input asp-for="Meal.MealName" class="form-control" />
                <span asp-validation-for="Meal.MealName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
